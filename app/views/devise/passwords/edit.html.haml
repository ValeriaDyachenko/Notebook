.stiker
  .devise-form
    %legend
      .title
        = t('change_your_password')
      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token
        %div
          = f.label :password, t('new_password')
          = f.password_field :password, :autofocus => true, :class => "span3"
        %br
        %div
          = f.label :password_confirmation, t('confirm_new_password')
          = f.password_field :password_confirmation, :class => "span3"
        %br
        %div
          = f.submit t('change_my_password'), :class => "btn btn-block btn-success"
      = render "devise/shared/links"