.add_form
  = form_for @todosection do |f|
    = f.label I18n.t("New Section")
    = f.text_field :title, placeholder: I18n.t("Title Section"), style: "margin-top:6px;border:1px #DEB887 solid "
    = f.submit I18n.t("Add")
.page.sections
  %table
    %tr#head
      %th
        #title
          =t("All Sections")
      %th
    - @todosections.each do |s|
      %tr#section_id
        %td#names
          = s.title
        %td#linkss
          = link_to image_tag("show.png", :border => 0), s
          = link_to image_tag("ed.png", :border => 0), edit_todosection_path(s)
          = link_to image_tag("del.png", :border => 0), todosection_path(s),    method: :delete, data: { confirm: I18n.t("Are you sure?") } 


